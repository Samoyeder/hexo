.posts {
  // position: relative
  // margin-left: 500px
  // background-color: blue;
  min-height: 80vh;
  display: flex;
  flex-wrap: wrap;

  // width: 1280px
  .index-post {
    position: relative;
    width: 248px;
    height: 280px;
    background-color: rgba(255, 255, 255, 0.85);
    margin: 18px;
    display: flex;
    flex-direction: column;
    // align-content: center;
    text-align: center;
    border-radius: 10px;
    // box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.2);
    box-shadow: 0 10px 15px rgba(31, 45, 61, 0.1), 0 0 0 1px hsla(0, 0%, 100%, 0.06) inset;
    padding: 0 10px 10px 10px;
    transition: all 0.3s ease-out;

    @media (max-width: 1500px) {
      width: 225px;
      height: 230px;

      .post-img {
        img {
          max-height: 180px;
        }
      }
    }

    @media (max-width: 850px) {
      flex: 12;
      min-width: 160px;

      .post-img {
        img {
          max-height: 180px;
        }
      }
    }

    .post-title {
      height: 50px;
      position: absolute;
      font-size: 15px;
      display: flex;
      align-items: center;
      line-height: 50px;
      text-align: left;
      //多于文字显示省略号
      text-overflow: -o-ellipsis-lastline;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      // 多余文字显示省略号结束
      // background-color: red;

      a {
        color: #657487;
      }
    }

    .post-img {
      margin-top: 50px;

      // position: absolute
      img {
        height: 230px;
        width: 100%;
        border-radius: 10px;
        transition: all 0.3s ease-out;
      }
    }

    .post-info {
      display: none;
      // opacity: 0;
      transition: all 0.3s ease-out;
    }

    &:hover {
      .post-img {
        img {
          transform: translateY(-20px);
          opacity: 0.05;
        }
      }

      .post-info {
        opacity: 1;
        transform: translateY(-80px);
        display: flex;
        flex-direction: column;
        color: #657487;
        font-size: 12px;

        a {
          font-size: 14px;
          color: #fff;
          background-image: linear-gradient(90deg, rgb(56, 103, 114), rgb(73, 144, 148));
          border-radius: 20px;
          // width: 70px
          padding: 10px 0 10px 0;
          text-align: center;
        }
      }
    }
  }
}
