
.posts {
    display: flex;
    flex-wrap: wrap;

    .index-post {
        position: relative;
        width: 900px;
        height: 250px;
        overflow: hidden;
        background-color: rgba(255, 255, 255, 0.85);
        margin: 18px;
        display: flex;
        flex-direction: row;
        align-content: center;
        border-radius: 1rem;
        box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.2);

        .post-img {
            img {
                height: 250px
                width: 330px
            }

            height: 210px;
            width: 330px;
            // display: block
            border-radius: 1rem;
            overflow: hidden;
            // background-color: red;
            padding: 0;
            margin: auto 30px;
        }

        .information {
            display: flex;
            flex-direction: column;

            .post-info{
                .post-title{
                    font-size: 2rem 
                }

                
                position: absolute
                // background-color: red
                top: 20px
                width: 480px
                height: 200px
            }
            .post-meta {
                // display: block
                width 480px
                position: absolute
                bottom 20px
                // background-color red
                display: flex;
                flex-direction: row;
                display: flex
                justify-content: space-between
            }
        }
    }
}
