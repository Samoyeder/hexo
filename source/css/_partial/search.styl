.local_search {
  width: 100vw;
  height: 0;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0;
  top: 0;
  overflow: hidden;
  opacity: 0;
  transition: all 0.3s;

  // display: none;
  .local_search_content {
    // pointer-events: none
    border-radius: 10px
    padding: 0 40px;
    position: absolute;
    display: flex;
    width: 700px;
    min-height: 214px;
    background-color: #fff;
    // z-index: 99 !import
    top: 30px;
    right: 0;
    left: 0;
    flex-direction: column;
    text-align: center;
    // bottom: 0
    margin: 0 auto;

    .local_search_title {
      position: relative;
      // background-color: red
      .local_search_close {
        position: absolute;
        right: 20px;
        top: 30px;
        font-size: 25px;
        cursor: pointer;
      }
    }

    input {
      transition: border-color 0.5s;
      outline: none;
      border: none;
      border-bottom: 1px solid #ced4da;
      font-size: 18px;

      &:focus {
        border-bottom: 2px solid rgb(50, 182, 255);
      }
    }

    // }
    .local_search_res {
      margin-top: 20px;
      // margin: 0 auto;
      // position: absolute
      background-color: #fff;
      // width: 900px;
      max-height: 400px;
      overflow-y: auto;
      overflow-x: hidden;
      padding-right: 20px;

      .search_result_list {
        li {
          a {
            color: #3c4858;
            font-weight: 700;
            width: 100%;
            display: block;
            padding: 10px;
            border-left: 2px solid rgb(50, 182, 255);
            // border-radius: 10px;
            text-align: left;
            transition: all 0.3s;

            &:hover {
              color: rgb(50, 182, 255);
              background-color: rgba(50, 182, 255, 0.05);
            }
          }

          p {
            text-align: left;
            height: 50px;
            /* 最多显示两行 */
            text-overflow: -o-ellipsis-lastline;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            /* end */
          }
        }
      }
    }
  }
}
