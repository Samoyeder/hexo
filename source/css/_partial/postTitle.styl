#postTitle {
  position: relative;
  height: 330px;
  width: 1220px;
  border-radius: 0 0 12px 12px;
  box-shadow: 0 15px 20px rgba(31, 45, 61, 0.2);

  .post_back_img {
    position: relative;
    // background-color: red
    overflow: hidden;
    height: 330px;
    width: 1220px;
    border-radius: 0 0 12px 12px;

    .post_back_img_mask {
      background-color: #000;
      opacity: 0.7;
      position: absolute;
      // background-color: red;
      height: 100%;
      width: 100%;
      z-index: -1;
    }

    img {
      transform: scale(2);
      position: absolute;
      z-index: -9;
      height: 100%;
      width: 100%;
      border-radius: 20px;
    }
  }

  .post_t {
    height: 330px;
    // background-color: #bfa;
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    left: 5%;

    .post_title {
      color: #fff;
      font-size: 28px;
    }

    .post_time {
      color: #fff;
      text-align: right;
    }
  }

  .post_page {
    position: absolute;
    bottom: -10px;
    right: 10%;
    height: 270px;
    background-color: #fff;
    padding: 0 10px 10px 10px;
    z-index: 100;
    display: flex;
    flex-direction: column;
    border-radius: 10px;

    // align-items: flex-end
    img {
      width: 220px;
      height: 220px;
      border-radius: 10px;
    }

    .post_cate {
      font-size: 14px;
      height: 50px;
      text-align: left;
      display: flex;
      align-items: center;

      i, span {
        color: #657487;
      }
    }
  }
}