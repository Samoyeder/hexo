.banner {
  .banner_swiper {
    position: relative;
    width: 100%;
    height: 300px;

    .banner_list {
      li {
        position: absolute;

        img {
          width: 100%;
          height: 300px;
        }
      }
    }

    .banner_btn {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 60%;
      // justify-content:
      left: -15px;

      .banner_btn_up, .banner_btn_down {
        width: 30px
        height: 30px
        background-color: #fff;
        border-radius: 50%
      }

      i {
        // background-color: #fff
        color: red;
        // font-size: 30px;
      }
    }
  }
}